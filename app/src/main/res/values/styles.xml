<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Device/Host cards -->
    <style name="StatusCardLayout">
        <item name="android:padding">@dimen/default_element_padding</item>
    </style>
<!-- Shapes -->
    <style name="ShapeAppearanceOverlay.CutCorners" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/large_corner_radius</item>
    </style>
    <style name="ShapeAppearanceOverlay.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_corner_radius</item>
    </style>
<!-- Fragment -->
    <style name="FragmentWithBackground">
        <item name="android:background">?attr/colorBackground</item>
    </style>
    <style name="ContentLayoutStyle">
        <item name="android:padding">@dimen/default_fragment_padding</item>
    </style>
<!-- Text On Background -->
    <style name="TextOnBackground">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextOnBackgroundRegular" parent="TextOnBackground">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>
    <style name="TextOnBackgroundLarge" parent="TextOnBackground">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextOnBackgroundExtraLarge" parent="TextOnBackground">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>
<!-- Buttons -->
    <style name="PrimaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_button_color_selector</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CutCorners</item>
    </style>
    <style name="SecondaryButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_button_color_selector</item>
    </style>
    <style name="NegativeButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/negative_button_color_selector</item>
        <item name="strokeColor">?attr/colorNegativeSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CutCorners</item>
    </style>
    <style name="NegativeTextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/negative_button_color_selector</item>
    </style>
<!-- Play Controls -->
    <style name="TimeCard" parent="">
        <item name="android:textColor">?attr/colorPlayAccent</item>
        <item name="android:background">?attr/colorPlayContrast</item>
        <item name="android:padding">@dimen/default_element_padding</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedCorners</item>
    </style>
</resources>